{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "jsx": "react",
    "strict": true,
    "rootDir": "src",
    "outDir": ".dist",
    "sourceMap": true,
    "incremental": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}